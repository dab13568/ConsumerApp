<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_alignParentRight="true"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Profile_Image_recycle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/user"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginRight="20dp"

        android:orientation="vertical">

        <TextView android:id="@+id/user_name_exmaple_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heebo_medium"
            android:textSize="18dp"
            android:textColor="#000000"
            android:text="דניאל בידרמן"/>

        <TextView android:id="@+id/user_details"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heebo_regular"
            android:layout_below="@id/user_name_exmaple_card"
            android:textSize="13dp"
            android:textColor="#000000"
            android:text="פתח תקווה, 1 חברים משותפים"/>

    </LinearLayout>





    <Button
        android:id="@+id/not_friend"
        android:layout_width="80dp"
        android:text="הוסף"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:layout_marginTop="55dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/heebo_medium"
        android:layout_height="28dp"
        android:background="@drawable/rounded_add_freind"
        android:layout_alignParentLeft="true"/>
</LinearLayout>

</RelativeLayout>