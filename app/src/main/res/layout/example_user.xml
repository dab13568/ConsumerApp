<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="6dp"
    app:cardCornerRadius="14dp">
    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal" android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Profile_Image_recycle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/user"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView android:id="@+id/user_name_exmaple_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/heebo_medium"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:text="דניאל בידרמן"/>
                    <Button
                        android:id="@+id/phone_friend_button"
                        android:layout_width="30dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/phone_button"
                        android:layout_height="30dp"
                        android:layout_gravity="center"/>
                </LinearLayout>


                <TextView android:id="@+id/user_details"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_regular"
                    android:layout_below="@id/user_name_exmaple_card"
                    android:textSize="13dp"
                    android:textColor="#000000" />
            </LinearLayout>






        </LinearLayout>
        <Button
            android:id="@+id/add_or_delete_friend"
            android:layout_width="80dp"
            android:text=""
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:layout_marginRight="5dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/heebo_medium"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_add_freind"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>