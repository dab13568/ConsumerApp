<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="6dp"
    app:cardCornerRadius="24dp">


    <RelativeLayout
        android:id="@+id/taken_parcel_view_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/phone_namber_taken_parcel_layout"
            android:layout_marginRight="4dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/phone_namber_taken_parcel"
                android:textColor="#030B2C"
                android:layout_width="180dp"
                android:textSize="15dp"

                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/heebo_bold"
                android:textColor="#030B2C"
                android:layout_marginEnd="1dp"

                android:text="מספר פלאפון:  "
                android:layout_marginRight="1dp" />
            <Button
                android:id="@+id/phone_recipient_taken_parcel"
                android:layout_width="30dp"
                android:background="@drawable/phone_button"
                android:layout_height="30dp"
                android:layout_gravity="center"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/address_taken_parcel_layout"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_namber_taken_parcel_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/address_taken_parcel"
                android:layout_width="180dp"
                android:textSize="15dp"
                android:textColor="#030B2C"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/heebo_bold"
                android:textColor="#030B2C"
                android:layout_marginEnd="1dp"
                android:text="כתובת הנמען: "
                android:textSize="15dp"
                android:layout_marginRight="1dp" />

            <Button
                android:id="@+id/adress_recipient_taken_parcel"
                android:layout_width="30dp"
                android:background="@drawable/maps_button"
                android:layout_height="30dp"
                android:layout_gravity="center"/>


        </LinearLayout>




        <LinearLayout
            android:id="@+id/subitem_taken_parcel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="3dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/address_taken_parcel_layout">


            <Button
                android:layout_width="200dp"
                android:id="@+id/taken_parcel_button"
                android:background="@drawable/rounded_take_parcel_button"
                style="@style/Widget.AppCompat.Button"
                android:text="מסרתי את החבילה"
                android:textColor="#ffffff"
                android:fontFamily="@font/heebo_regular"
                android:layout_height="35dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Profile_Image_recycle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/user"
                />

            <TextView
                android:id="@+id/lname_taken_parcel"
                android:layout_width="80dp"
                android:text="שלומיחי"
                android:textColor="#030B2C"
                android:gravity="center"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/fname_taken_parcel"
                android:layout_width="80dp"
                android:text="נגרי"
                android:textColor="#030B2C"
                android:gravity="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>