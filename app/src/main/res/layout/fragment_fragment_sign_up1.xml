<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sendpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Please fill in the details below:"
        android:textAlignment="center"
        android:textColor="#484848"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_text"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="16dp"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_text"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="16dp"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/id_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_text"
        android:drawableLeft="@drawable/id_icon"
        android:drawablePadding="16dp"
        android:hint="ID"
        android:inputType="number"
        android:padding="12dp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_text"
        android:drawableLeft="@drawable/phone_number_icon"
        android:drawablePadding="16dp"
        android:hint="Phone Number"
        android:inputType="phone"
        android:windowSoftInputMode="adjustPan"
        android:padding="12dp"
        android:textColor="#000" />

    <TextView
        android:visibility="gone"
        android:id="@+id/error_messege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/error_icon"
        android:text="  Please enter correct values!"
        android:textColor="#cc0000"
        android:textSize="17dp" />
